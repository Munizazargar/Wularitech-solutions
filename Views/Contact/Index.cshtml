@model WularItech_solutions.Models.Contact

@{
    ViewData["Title"] = "Contact Us";
}

<link rel="stylesheet" href="~/css/contact.css" />

<div class="contact-container">
    <h2>Contact Us</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Index" method="post" class="contact-form">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input asp-for="Name" type="text" required placeholder=" " />
            <label>Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" type="email" required placeholder=" " />
            <label>Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <textarea asp-for="Message" required placeholder=" "></textarea>
            <label>Message</label>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Send Message</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
