                       target="_blank" class="btn-book">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path
                        d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" />
                    </svg>
                    Book Now
                </a>

                <button id="themeToggle" class="theme-toggle">
                    🌙 Dark Mode
                </button>




            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer reveal">
        <div class="footer-container">

            <div class="footer-brand reveal reveal-delay-1">
                <div class="brand-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M13 3L4 14h7v7l9-11h-7V3z" />
                    </svg>
                </div>
                <div class="brand-text">
                    <span class="brand-name">WularTech</span>
                    <span class="brand-tagline">SOLUTIONS</span>
                </div>
            </div>

            <div class="footer-links">

                <div class="footer-column reveal reveal-delay-1">
                    <h4>Company</h4>
                    <ul>
                        <li><a href="/About">About Us</a></li>
                        <li><a href="/Services">Services</a></li>
                        <li><a href="/Contact">Contact</a></li>
                    </ul>
                </div>

                <div class="footer-column reveal reveal-delay-2">
                    <h4>Products</h4>
                    <ul>
                        <li><a href="/Products/Cameras">Cameras</a></li>
                        <li><a href="/Products/Wires">Electrical Wires</a></li>
                        <li><a href="/Products/Accessories">Accessories</a></li>
                    </ul>
                </div>

                <div class="footer-column reveal reveal-delay-3" style="margin-bottom:20px;">
                    <h4 style="font-size:18px; color:#1A1A2E; margin-bottom:10px;">Contact Us</h4>
                    <ul style="list-style:none; padding:0; margin:0; color:#6B7280; font-size:14px; line-height:1.8;">
                        <li>Address: Bemina, Srinagar, Near Court, 190001</li>
                        <li>Email:
                            <a href="mailto:hyatt.wular@gmail.com" style="color:#E07B39; text-decoration:none;">
                                hyatt.wular@gmail.com
                            </a>
                        </li>
                        <li>WhatsApp:
                            <a href="https://wa.me/918825048116" target="_blank"
                                   style="color:#E07B39; text-decoration:none;">
                                +91 88250 48116
                            </a>
                        </li>
                    </ul>
                </div>

            </div>

            <div class="footer-bottom reveal reveal-delay-3">
                <p>&copy; 2026 WularTech Solutions. All rights reserved.</p>
            </div>

        </div>
    </footer>

    <script>
        const toggleBtn = document.getElementById("themeToggle");

        toggleBtn.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");

            if (document.body.classList.contains("dark-mode")) {
                toggleBtn.textContent = "☀️ Light Mode";
            } else {
                toggleBtn.textContent = "🌙 Dark Mode";
            }
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>