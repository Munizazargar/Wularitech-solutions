<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WularTech</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Render page-specific styles -->
    @RenderSection("Styles", required: false) <!-- Make it optional -->
    <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@400;500;600&display=swap"
    rel="stylesheet">
</head>



<body class="dark-mode">

