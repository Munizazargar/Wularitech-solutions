            <div class="navbar-right">
                <ul class="nav-links">
                    <li><a href="/" class="nav-link active">Home</a></li>
                    <li><a href="/Product/index" class="nav-link">Product</a></li>
                    <li><a href="/Services" class="nav-link">Services</a></li>
                    <li><a href="/Contact" class="nav-link">Contact</a></li>
                </ul>

              @{
    var token = Context.Request.Cookies["jwt"];
}

<div class="auth-buttons">
    @if (!string.IsNullOrEmpty(token))
    {
        <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
            <button type="submit" class="btn-register" style="border:none; cursor:pointer;">
                Logout
            </button>
        </form>
    }
    else
    {
        <a href="/Account/Login" class="btn-login">Login</a>
        <a href="/Account/Register" class="btn-register">Register</a>
    }
</div>




