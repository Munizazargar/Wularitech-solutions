@model WularItech_solutions.Models.Product

<style>
   .product-details-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 100px 20px 40px 20px;  /* ðŸ‘ˆ top padding increased */
    background: var(--bg-light);
}


    .product-card {
        width: 100%;
        max-width: 950px;
        background: var(--bg-white);
        border-radius: 16px;
        box-shadow: var(--shadow-lg);
        padding: 40px;
        display: flex;
        gap: 40px;
        align-items: center;
        flex-wrap: wrap;
        border: 1px solid var(--border-color);
    }

    .product-image img {
        width: 100%;
        max-width: 380px;
        border-radius: 14px;
        object-fit: cover;
        box-shadow: var(--shadow-md);
        transition: transform 0.3s ease;
    }

    .product-image img:hover {
        transform: scale(1.05);
    }

    .product-info {
        flex: 1;
    }

    .product-info h2 {
        font-size: 30px;
        font-weight: 600;
        margin-bottom: 15px;
        color: var(--text-dark);
    }

    .product-info p {
        margin-bottom: 10px;
        color: var(--text-gray);
        line-height: 1.6;
    }

    .price {
        font-size: 24px;
        font-weight: bold;
        color: var(--dark-navy);
        margin-top: 15px;
    }

    .stock {
        font-size: 14px;
        color: var(--text-light);
        margin-bottom: 25px;
    }

    .btn-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    /* ===== DARK MODE BUTTON FIX ===== */

body.dark-mode .btn-primary {
    background-color: #E07B39;   /* orange */
    border-color: #E07B39;
    color: #ffffff;
}

body.dark-mode .btn-primary:hover {
    background-color: #c9652f;
    border-color: #c9652f;
    color: #ffffff;
}

body.dark-mode .btn-outline-danger {
    color: #ff6b6b;
    border-color: #ff6b6b;
}

body.dark-mode .btn-outline-danger:hover {
    background-color: #ff6b6b;
    color: #ffffff;
}


    media (max-width: 768px) {
        .product-card {
            flex-direction: column;
            text-align: center;
            padding: 25px;
        }
    }
</style>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center" style="margin-top:100px;">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center" style="margin-top:100px;">
        @TempData["Success"]
    </div>
}


<div class="product-details-wrapper">
    <div class="product-card">

        <div class="product-image">
            <img src="@Model.ProductImage" alt="@Model.ProductName" />
        </div>

        <div class="product-info">
            <h2>@Model.ProductName</h2>

            <p>@Model.ProductDescription</p>

            <p class="price">â‚¹@Model.ProductPrice</p>
            <p class="stock">Stock Available: @Model.ProductStock</p>

            <div class="btn-group">
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-primary">
                        Add to Cart
                    </button>
                </form>

                <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-outline-danger">
                        Remove
                    </button>
                </form>
            </div>
        </div>

    </div>
</div>
