@model List<WularItech_solutions.Models.Product>
@inject WularItech_solutions.Interfaces.ITokenService tokenService

@{
    ViewData["Title"] = "Products";

    var token = Context.Request.Cookies["jwt"];
    var isAdmin = tokenService.IsAdmin(token);
}

@section Styles {
    <link rel="stylesheet" href="~/css/products.css" />
}

<div class="products-page-container">

    <h2 class="page-title reveal">Our Products</h2>

    @if (isAdmin)
    {
        <div class="admin-create-wrapper reveal">
            <a asp-action="CreateProduct" class="btn btn-success create-btn">
                + Create Product
            </a>
        </div>
    }

    <div class="products-grid">

        @foreach (var product in Model)
        {
            <div class="product-card reveal">

                <a asp-action="Details" asp-route-id="@product.ProductId" class="product-image-wrapper">

                    @if (!string.IsNullOrEmpty(product.ProductImage))
                    {
                        <img src="@product.ProductImage" alt="@product.ProductName" />
                    }
                    else
                    {
                        <div class="no-image">No Image</div>
                    }

                </a>

                <div class="product-info">

                    <h5 class="product-name">
                        <a asp-action="Details" asp-route-id="@product.ProductId">
                            @product.ProductName
                        </a>
                    </h5>

                    <p class="product-price">â‚¹@product.ProductPrice</p>

                    <p class="product-stock">
                        @if (product.ProductStock > 0)
                        {
                            <span>@product.ProductStock in stock</span>
                        }
                        else
                        {
                            <span class="out-of-stock">Out of stock</span>
                        }
                    </p>

                    @if (isAdmin)
                    {
                        <div class="admin-actions">

                            <a asp-action="UpdateProduct"
                               asp-route-ProductId="@product.ProductId"
                               class="btn btn-warning btn-sm">
                                Edit
                            </a>

                            <form asp-action="DeleteProduct"
                                  method="post"
                                  style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this product?');">

                                <input type="hidden"
                                       name="ProductId"
                                       value="@product.ProductId" />

                                <button type="submit"
                                        class="btn btn-danger btn-sm">
                                    Delete
                                </button>

                            </form>

                        </div>
                    }

                </div>
            </div>
        }

    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {

    const reveals = document.querySelectorAll(".reveal");

    function handleScroll() {
        const windowHeight = window.innerHeight;

        reveals.forEach(el => {
            const rect = el.getBoundingClientRect();

            if (rect.top < windowHeight - 100 && rect.bottom > 100) {
                el.classList.add("active");
            } else {
                el.classList.remove("active");
            }
        });
    }

    window.addEventListener("scroll", handleScroll);
    handleScroll();
});
</script>
