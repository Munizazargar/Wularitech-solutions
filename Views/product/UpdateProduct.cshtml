    transition: background-color var(--transition-fast);
}

.btn-primary {
    background-color: var(--primary-orange);
    color: #fff;
    border: none;
}

.btn-primary:hover {
    background-color: var(--primary-orange-hover);
}

.btn-secondary {
    background-color: var(--bg-light);
    color: var(--text-dark);
    border: 1px solid var(--border-color);
}

